<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/accent_color</item>
    </style>
    
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/large_button_layout</item>
        <item name="android:layout_margin">1.5dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/accent_color</item>
    </style>
    
    <style name="CalculatorButtonOperator" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/accent_color_light</item>
        <item name="android:textColor">@color/background_color</item>
        <item name="android:tint">@color/background_color</item>
    </style>
    
    <style name="CustomDatePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColorPrimary">@color/accent_color</item>
        <item name="android:textColorSecondary">@color/accent_color</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="CustomTimePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColorPrimary">@color/accent_color</item>
        <item name="android:textColorSecondary">@color/accent_color</item>
    </style>
</resources>
